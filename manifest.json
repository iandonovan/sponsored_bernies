{
	"manifest_version": 2,

	"name": "Sponsored Bernies",
	"description": "Replace Facebook 'Sponsored Stories' with pictures of Bernie Sanders.",
	"version": "1.0.0",

	"icons": {
		"128": "images/icon128.png"
	},

	"permissions": [
		"http://*/*",
		"https://*/*",
		"tabs",
		"storage",
		"contextMenus"
	],

	"browser_action": {
		"default_title": "Sponsored Bernies",
		"default_icon": "images/icon.png",
		"default_popup": "settings.html"
	},

	"background": {
		"scripts": ["bootstrap.js", "custom_images.js"],
		"persistent": false
	}
}
